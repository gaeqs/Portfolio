---
interface Props {
  label: string;
}

const { label } = Astro.props;
---

<div class="relative flex items-center justify-center py-8">
  <div class="absolute inset-0 flex items-center" aria-hidden="true">
    <div class="w-full h-px bg-gradient-to-r from-transparent via-zinc-800 to-transparent"></div>
  </div>
  <div class="relative flex justify-center">
    <span class="bg-zinc-950 px-3 text-xs font-mono text-zinc-600 uppercase tracking-widest border border-zinc-900 rounded-full">
      {label}
    </span>
  </div>
</div>
