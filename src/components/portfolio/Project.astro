---
const {title, url, image, languages, description, size = "xs"} = Astro.props;
---

<a href={url} class="group block w-full h-full">
    <article
            class="relative h-full flex flex-col overflow-hidden rounded-md border border-white/10 bg-zinc-900/50 backdrop-blur-sm transition-all duration-300 hover:border-cyan-500/50 hover:shadow-[0_0_15px_rgba(6,182,212,0.15)]">
        
        <!-- Image Section (Dominant) -->
        <div class="relative w-full h-64 overflow-hidden border-b border-white/10">
            {
                image && (
                    <img 
                        class="w-full h-full object-cover transition-transform duration-500 ease-out group-hover:scale-105"
                        src={image.url} 
                        alt={image.alt}
                    />
                )
            }
            <!-- Overlay Gradient -->
            <div class="absolute inset-0 bg-gradient-to-t from-zinc-950/80 to-transparent opacity-60"></div>
        </div>

        <!-- Content Section -->
        <div class="flex flex-col p-5 gap-4 flex-grow">
            <div class="flex flex-col gap-2">
                <h2 class="text-xl font-sans font-bold text-zinc-100 tracking-tight group-hover:text-cyan-400 transition-colors">
                    {title}
                </h2>
                
                <p class="text-sm text-zinc-400 leading-relaxed line-clamp-3">
                    {description}
                </p>
            </div>

            <!-- Tech Stack (Monospace Tags) -->
            <div class="mt-auto pt-4 border-t border-white/5">
                <div class="flex flex-wrap gap-2">
                    {
                        languages.map((language: string) => (
                            <span class="font-mono text-[10px] uppercase tracking-wider text-cyan-400 px-2 py-1 rounded-sm border border-cyan-500/20 bg-cyan-500/5">
                                {language}
                            </span>
                        ))
                    }
                </div>
            </div>
        </div>
    </article>
</a>
