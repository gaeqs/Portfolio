---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/portfolio/Hero.astro";
import ListProjects from "../components/portfolio/ListProjects.astro";
import SectionDivider from "../components/ui/SectionDivider.astro";
import Contact from "../components/portfolio/Contact.astro";
import Experience from "../components/portfolio/Experience.astro";
import Academics from "../components/portfolio/Academics.astro";
import Title from "../components/ui/Title.astro";
import TechArsenal from "../components/portfolio/TechArsenal.astro";

const pageTitle = "Gael Rial Costas";
const description = "Ph.D. Candidate in Computer Graphics & HPC. Systems Architect.";
const ogimage = {
  url: "/images/og-image.png",
  alt: "Gael Rial Portfolio",
};
---

<Layout pageTitle={pageTitle} description={description} ogimage={ogimage}>
  <!-- 1. Hero Section -->
  <section id="hero" class="scroll-mt-24">
    <Hero/>
  </section>

  <div class="max-w-7xl mx-auto px-6 flex flex-col gap-12">

    <!-- 2. Selected Projects -->
    <SectionDivider label="01 // WORK"/>
    <Title
            title="Compiled Modules"
            description="A catalog of graphics engines, tools, simulations and other projects I've worked on."
    />
    <section id="projects" class="scroll-mt-24">
      <ListProjects/>
    </section>

    <TechArsenal/>

    <!-- 3. Experience -->
    <SectionDivider label="02 // LOG"/>
    <section id="experience" class="scroll-mt-24">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
        <Title
                title="System Log"
                description="A chronological record of professional roles, academic milestones, and key engineering contributions."
        />
        <div class="grid lg:grid-cols-2 lg:col-span-2 gap-12">
          <Academics/>
          <Experience/>
        </div>
      </div>
    </section>

    <!-- 4. Contact -->
    <SectionDivider label="03 // COMM"/>
    <Title
            title="Initialize Connection"
            description="Open for research collaborations and engineering opportunities."
    />
    <section id="contact" class="scroll-mt-24">
      <Contact/>
    </section>
  </div>
</Layout>
