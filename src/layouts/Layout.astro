---
import "../styles/global.css";
import Navbar from "../components/layout/Navbar.astro";
import Footer from "../components/layout/Footer.astro";
import { ClientRouter } from "astro:transitions";
const {
  pageTitle = "Gael Rial - HPC & Systems Architect",
  description = "Ph.D. Candidate specializing in C++20, Vulkan, and High-Performance Computing. Creator of Neon Engine and JAMS IDE.",
  ogimage: rawOgImage,
} = Astro.props;

const defaultImage = {
  url: "/images/imagedefault.webp",
  alt: "Default image of EFEELE",
};

const ogimage = rawOgImage || defaultImage;
const siteUrl = new URL(Astro.url).origin;

const SEO = {
  sitename: "NeonMint by EFEELEðŸš€",
  url: siteUrl,
  locale: "en_US",
  author: "Gael Rial | EFEELE",
  twitter: "@efeeledev",
};


const twitterimage = `${siteUrl}${ogimage.url}`;
---

<html
  lang="en"
  class="bg-zinc-950 font-sans scroll-smooth dark"
>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{pageTitle}</title>
    <!-- Favicon for different platforms -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="alternate icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" href="/favicon.png" />

    <!-- Web manifest -->
    <link rel="manifest" href="/site.webmanifest" />

    <meta name="description" content={description} />
    <meta name="author" content={SEO.author} />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={`${Astro.site}${Astro.url.pathname}`}>
    <!-- Open Graph / Facebook -->
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogimage.url} />
    <meta property="og:image:alt" content={ogimage.alt} />
    <meta property="og:url" content={SEO.url} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={SEO.sitename} />
    <meta property="og:locale" content={SEO.locale} />
    

    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={twitterimage} />
    <meta name="twitter:image:alt" content={ogimage.alt} />
    <meta name="twitter:site" content={SEO.twitter} />
  
    <meta name="theme-color" content="#09090b"/>

    <!-- Sitemap -->
    <link rel="sitemap" href="/sitemap-index.xml" />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">

    <ClientRouter />
  </head>
  <body class="overflow-x-hidden text-zinc-400 bg-zinc-950 selection:bg-cyan-900/30 selection:text-cyan-200">
    <!-- Film Grain Overlay -->
    <div class="fixed inset-0 z-50 pointer-events-none opacity-[0.03] mix-blend-overlay bg-noise"></div>

    <Navbar />

    <div class="min-h-[85vh] relative z-0">
      <slot />
    </div>

    <Footer />
  </body>
</html>
